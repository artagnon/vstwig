{
  "name": "vstwig",
  "icon": "assets/logo.png",
  "displayName": "PHP Twig",
  "description": "Syntax highlihting and formatting",
  "author": "Ramkumar Ramachandra",
  "publisher": "artagnon",
  "repository": {
    "type": "git",
    "url": "https://github.com/artagnon/vstwig"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "PHP",
    "Twig",
    "Beautifier"
  ],
  "contributes": {
    "languages": [
      {
        "id": "twig",
        "extensions": [
          ".twig"
        ],
        "configuration": "twig-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "twig",
        "scopeName": "text.twig",
        "path": "./syntax/twig.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:twig"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@yarnpkg/pnpify": "^3.0.0-rc.3",
    "eslint": "^7.25.0",
    "glob": "^7.1.6",
    "ts-loader": "^9.1.1",
    "typescript": "^4.2.4",
    "vsce-yarn-patch": "^1.66.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.35.1",
    "webpack-cli": "^4.6.0"
  }
}
