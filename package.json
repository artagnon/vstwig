{
  "name": "vstwig",
  "icon": "assets/logo.png",
  "displayName": "PHP Twig",
  "description": "Syntax highlihting and formatting",
  "author": "Ramkumar Ramachandra",
  "publisher": "artagnon",
  "repository": {
    "type": "git",
    "url": "https://github.com/artagnon/vstwig"
  },
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "PHP",
    "Twig",
    "Beautifier"
  ],
  "contributes": {
    "languages": [
      {
        "id": "twig",
        "extensions": [
          ".twig"
        ],
        "configuration": "twig-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "twig",
        "scopeName": "text.twig",
        "path": "./syntax/twig.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:twig"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn package",
    "compile": "yarn webpack",
    "watch": "yarn webpack --watch",
    "package": "yarn webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "packageManager": "yarn@4.1.1"
}
