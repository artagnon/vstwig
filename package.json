{
  "name": "vstwig",
  "icon": "assets/logo.png",
  "displayName": "PHP Twig",
  "description": "Syntax highlihting and formatting",
  "author": "Ramkumar Ramachandra",
  "publisher": "artagnon",
  "repository": {
    "type": "git",
    "url": "https://github.com/artagnon/vstwig"
  },
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "PHP",
    "Twig",
    "Beautifier"
  ],
  "contributes": {
    "languages": [
      {
        "id": "twig",
        "extensions": [
          ".twig"
        ],
        "configuration": "twig-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "twig",
        "scopeName": "text.twig",
        "path": "./syntax/twig.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:twig"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "glob": "^8.0.3",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.3",
    "vsce-yarn-patch": "^1.66.2",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  }
}
