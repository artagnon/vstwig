{
  "name": "vstwig",
  "icon": "assets/logo.png",
  "displayName": "PHP Twig",
  "description": "Syntax highlighting and formatting",
  "author": "Ramkumar Ramachandra",
  "publisher": "artagnon",
  "repository": {
    "type": "git",
    "url": "https://github.com/artagnon/vstwig"
  },
  "version": "0.0.10",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "PHP",
    "Twig",
    "Beautifier"
  ],
  "contributes": {
    "languages": [
      {
        "id": "twig",
        "extensions": [
          ".twig"
        ],
        "configuration": "twig-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "twig",
        "scopeName": "text.twig",
        "path": "./syntax/twig.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:twig"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn package",
    "compile": "yarn webpack",
    "watch": "yarn webpack --watch",
    "package": "yarn webpack --mode production --devtool hidden-source-map",
    "lint": "yarn eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "@types/vscode": "^1.92.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "vsce": "^2.15.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "packageManager": "yarn@4.4.0"
}
